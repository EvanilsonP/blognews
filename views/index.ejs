<html lang="en">
  <%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>

<div class="news content">
   <h2>All news</h2>

      <% if (news.length > 0) { %>
        <% news.forEach(blogNews => { %>
          <h3 class="title"><%= blogNews.title %></h3>
          <p class="snippet"><%= blogNews.snippet %></p>
        <% }) %>
      <% } else { %>
        <p>There are no blogs to display...</p>
       <% } %>

      </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>